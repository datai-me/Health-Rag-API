# Application Settings
APP_NAME=Health RAG API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# API Configuration
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=sqlite:///./health_rag.db

# Security / JWT
# IMPORTANT: Generate a secure random secret key for production
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API Keys
# Get your Groq API key from: https://console.groq.com
GROQ_API_KEY=your-groq-api-key-here

# Get your Jina API key from: https://jina.ai
JINA_API_KEY=your-jina-api-key-here

# Optional: OpenAI API key (if you want to use OpenAI instead of Groq)
OPENAI_API_KEY=

# FDA Service Configuration
FDA_API_BASE_URL=https://api.fda.gov/drug/label.json
FDA_REQUEST_TIMEOUT=10
FDA_MAX_RESULTS=3

# RAG Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K_RESULTS=3
RAG_LLM_MODEL=llama-3.3-70b-versatile
RAG_LLM_TEMPERATURE=0.0
RAG_EMBEDDING_MODEL=jina-embeddings-v2-base-en

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
